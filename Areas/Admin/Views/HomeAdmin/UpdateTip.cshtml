@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Italian_Restaurant_1.Models.Tip

@{
    ViewData["Title"] = "UpdateTip";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>UpdateTip</h1>

<h4>Tip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="UpdateTip">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipName" class="control-label"></label>
                <input asp-for="TipName" class="form-control" />
                <span asp-validation-for="TipName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipRole" class="control-label"></label>
                <input asp-for="TipRole" class="form-control" />
                <span asp-validation-for="TipRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="tipsList">Back to List</a>
</div>

